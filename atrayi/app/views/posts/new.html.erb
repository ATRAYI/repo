<html>
<body style="background-color:#98FB98;">
<%=form_for @post,:url=>user_posts_path do |f|%>
<h2 style="font-family:verdana;color:#800080;"><%=f.label :title%>
<%=f.text_field :title%></h2>
<h2 style="font-family:verdana;color:#800080;"><%=f.label :description%>
<%=f.text_field :description%></h2>
<%= f.submit "Create Post"%>
<%end%>
</body>
</html>
