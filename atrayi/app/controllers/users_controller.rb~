class UsersController < ApplicationController
def index
	@users=User.all
end
def show
	@user=User.find(params[:id])
end
def create
	@user=User.create(params[:user])
	redirect_to index_path 
end
def new
	@user=User.new
	
end
def destroy
	user=User.find(params[:user])
	user.destroy()
	redirect_to index
end
end
